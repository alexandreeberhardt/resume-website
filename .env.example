# ===========================================
# CV Generator - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# --- PostgreSQL Database ---
POSTGRES_USER=cvuser
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=cvdatabase

# Note: DATABASE_URL is automatically constructed in docker-compose.yml
# For local development without Docker, set it manually:
# DATABASE_URL=postgresql://cvuser:your_secure_password_here@localhost:5432/cvdatabase

# --- OpenAI API (for CV import feature) ---
OPENAI_API_KEY=sk-your-openai-api-key-here

# --- AWS S3 Storage ---
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_S3_BUCKET=your-cv-bucket-name
AWS_REGION=eu-west-3

# --- JWT Authentication ---
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# --- Application Settings (optional) ---
# WORKERS=4
# LOG_LEVEL=info
